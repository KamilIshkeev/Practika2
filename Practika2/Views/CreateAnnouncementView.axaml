<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Practika2.Views.CreateAnnouncementView"
        Title="Создать анонс"
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        Background="#FCFCFC">
    
    <ScrollViewer Margin="24">
        <StackPanel Spacing="16">
            <TextBlock Text="Создание анонса" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2E7D32"/>
            <ComboBox x:Name="CourseComboBox"/>
            <TextBox x:Name="TitleTextBox" Watermark="Заголовок" Padding="12,8"/>
            <TextBox x:Name="ContentTextBox" 
                     Watermark="Содержание" 
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="200"
                     Padding="12,8"/>
            <Button x:Name="SaveButton" 
                    Content="Сохранить" 
                    Classes="primary"
                    Click="OnSaveClick"/>
        </StackPanel>
    </ScrollViewer>
</Window>


