<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style Selector="Window">
        <Setter Property="Background" Value="#FCFCFC"/>
    </Style>
    
    <!-- Стили для кнопок -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="#2E7D32"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="#1B5E20"/>
    </Style>
    
    <Style Selector="Button.accent">
        <Setter Property="Background" Value="#FF6F61"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
    <!-- Стили для карточек курсов -->
    <Style Selector="Border.courseCard">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BoxShadow" Value="0 2 8 #20000000"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
    </Style>
    
    <Style Selector="Border.courseCard:pointerover">
        <Setter Property="BoxShadow" Value="0 4 12 #30000000"/>
    </Style>
    
    <!-- Стили для текста -->
    <Style Selector="TextBlock.heading">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#2E7D32"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>
    
    <Style Selector="TextBlock.subheading">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#546E7A"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
</Styles>
